@import "../../app.wxss";

.item {
    background-color: #fff;
    border-bottom: 1px solid #f6f6f6;
    position: relative;
    display: flex;
    padding: 30rpx;
}

.item:last-child {
    border-bottom: none;
    border-radius: 0 0 12rpx 12rpx;
}

.item .img {
    width: 210rpx;
    height: 220rpx;
    background-color: #fff;
    border-radius: 5%;
}

.item .img image {
    width: 100%;
    height: 100%;
    border-radius: 5%;
}

.item .info {
    width: 69%;
    background-color: #fff;
    padding-left: 20rpx;
    position: relative;
}

.head-inf {
    padding-left: 0;
    font-weight: bold;
    margin-top: 4rpx;
    font-size: 30rpx;
    margin-bottom: 16rpx;
    width: 97%;
    height: 80rpx;
    color: #333;
    word-wrap: break-word;
    position: relative;
    line-height: 40rpx;
    overflow: hidden;
}

.fixed {
    position: absolute;
    bottom: 0;
    right: 0;
    padding-right: 20rpx;
    background: #fff;
}

.noFixed {
    display: inline-block;
}

.item .info .time {
    font-size: 24rpx;
    color: #666;
    font-weight: normal;
    display: flex;
    justify-content: flex-start;
    letter-spacing: 0px;
    margin-top: 6px;
    line-height: 40rpx;
}

.time-img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 10rpx;
}

.time-img image {
    width: 100%;
    height: 100%;
}

.item .info .time text {
    line-height: 36rpx;
}

.item .info .addr {
    font-size: 24rpx;
    color: #666;
    font-weight: normal;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.addr-img {
    width: 22rpx;
    height: 30rpx;
    margin-right: 16rpx;
    margin-left: 4rpx;
}

.addr-img image {
    width: 100%;
    height: 100%;
}

.addr-detail {
    width: 88%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 16px;
}

.options {
    width: 69%;
    height: 50rpx;
    position: absolute;
    bottom: 17rpx;
    right: 0;
    display: flex;
    justify-content: space-between;
    margin-top: 14rpx;
}

.options .head {
    height: 30rpx;
    line-height: 50rpx;
}

.options .head text {
    background-color: #f3f3f3;
    color: #333;
    font-size: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    padding: 2rpx 15rpx;
    border-radius: 5rpx;
    margin-left: 15rpx;
}

.options .head text:nth-of-type(2) {
    background-color: #feab17;
    color: #fff;
}

.options .price {
    float: left;
    width: 110rpx;
    height: 50rpx;
    line-height: 46rpx;
    background-color: rgb(255,255,255);
    color: #c31926;
    font-size: 28rpx;
    border-radius: 20rpx 0rpx 0rpx 20rpx;
    padding-left: 20rpx;
    padding-right: 10rpx;
    border: 1px solid rgb(235,235,235);
    text-align: center;
    border-right: none;
    margin-right: 4rpx;
}

.sel-wrapper {
    padding: 30rpx 20rpx 0rpx;
    font-size: 30rpx;
    color: #333;
    display: flex;
    font-weight: bold;
}

.sel-item {
    width: 33.33%;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.sel-item image {
    width: 20rpx;
    height: 10rpx;
    margin-left: 10rpx;
}

.joinBtn {
    background: #feab17;
    color: #fff;
    border-radius: 5rpx;
    padding: 5rpx 10rpx;
    width: max-content;
    margin-right: 10rpx;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 40rpx;
}

.textColor {
    color: #999;
}

.sBtnStyle {
    font-size: 20rpx;
    padding: 2rpx 10rpx;
    border-radius: 5rpx;
    height: 30rpx;
    display: inline-block;
    line-height: 30rpx;
    margin-left: 10rpx;
    font-weight: normal;
    vertical-align: middle;
}

.integralStyle {
    color: #fff;
    background: rgba(199,3,4,0.7);
}

.numStyle {
    color: #696565;
    background: #EDEDED;
}

.activityTypeName {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 45rpx;
    background: rgba(0,0,0,0.6);
    color: #fff;
    text-align: center;
    line-height: 45rpx;
    font-size: 24rpx;
}

.typeStyle {
    color: #C70304;
    border: 1px solid #C70304;
    font-size: 11px;
    font-weight: normal;
    border-radius: 4rpx;
    display: inline-block;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
}