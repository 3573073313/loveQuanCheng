.select_box {
    background: #fff;
    width: 400rpx;
    height: 90rpx;
    position: relative;
}

.select {
    box-sizing: border-box;
    width: 100%;
    height: 90rpx;
    border: 2rpx solid #f5f5f5;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 24rpx;
}

.select_text {
    font-size: 32rpx;
    flex: 1;
}

.select_img {
    width: 24rpx;
    height: 14rpx;
    display: block;
    transition: transform 0.3s;
    transition: transform 0.3s,-webkit-transform 0.3s;
    margin-right: -0.1rpx;
}

.option_box {
    position: absolute;
    top: 90rpx;
    width: 100%;
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
    z-index: 100;
}

.option {
    display: block;
    line-height: 40rpx;
    font-size: 24rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
}