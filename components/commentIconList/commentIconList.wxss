@import "../../app.wxss";

.itemFixed {
    position: fixed;
    background: #fff;
    z-index: 100;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 0 30rpx;
    margin: 0;
    border-top: 1px solid #f6f6f6;
}

.showKeyBoard {
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,0.5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999999;
}

.textContent {
    background: #fff;
    z-index: 100;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100vw;
}

.textarea {
    padding: 35rpx;
    height: 300rpx;
    display: flex;
    justify-content: center;
}

textarea {
    width: 100%;
    height: 100%;
    background: #f6f6f6;
    padding: 20rpx;
}

.textBtn {
    padding: 25rpx 35rpx;
}

.textBtn>view {
    width: 125rpx;
    height: 52rpx;
    color: #999;
    border: 1px solid #999;
    text-align: center;
    line-height: 52rpx;
    border-radius: 5rpx;
    font-size: 30rpx;
}

.textBtn>view.submit {
    color: #c70304;
    border-color: #c70304;
}

.indexsnap .toolItemNoFixed {
    margin: -30rpx 0 0;
}

.indexsnap .toolItem {
    border-top: 1px solid #f6f6f6;
    padding: 30rpx 0 0;
    display: flex;
    justify-content: space-between;
}

.itemFixed .toolItem {
    border-top: none;
    margin: 0;
    padding: 30rpx 0;
}