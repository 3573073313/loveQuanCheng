.mine-yfkjy-wrapper {
    margin: 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    padding: 20rpx;
}

.mine-yfkjy-item {
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f6f6f6;
    padding-top: 26rpx;
}

.yfkjy-time {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
}

.yfkjy-cont {
    font-size: 32rpx;
    line-height: 48rpx;
    margin-bottom: 28rpx;
}

.mine-yfkjy-wrapper image {
    width: 320rpx;
    height: 220rpx;
    border-radius: 6rpx;
}

.yfkjy-angle {
    width: 0;
    height: 0;
    border-left: 16rpx solid transparent;
    border-right: 16rpx solid transparent;
    border-bottom: 20rpx solid #f5f5f5;
    margin-left: 24rpx;
}

.yfkjy-reply-wrapper {
    padding: 30rpx 20rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
}

.yfkjy-reply-tit {
    font-size: 26rpx;
}

.yfkjy-reply-bot {
    font-size: 22rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 16rpx;
}

.yfkjy-reply-botl {
    display: flex;
    align-items: center;
}

.yfkjy-reply-botl image {
    width: 18rpx;
    height: 24rpx;
    margin-right: 12rpx;
}

.preimg {
    width: 100%;
    margin-top: 25rpx;
    overflow: hidden;
}

.preimg image {
    width: 300rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.gzimgs-area {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 14rpx;
    margin-right: 14rpx;
    overflow: hidden;
}

.gzimgs-area image {
    width: 200rpx;
    height: 200rpx;
}

.pre-video {
    margin-top: 25rpx;
}

.pre-video video {
    width: 100%;
    height: 500rpx;
    display: inline-block;
    line-height: 0;
    overflow: hidden;
    position: relative;
}