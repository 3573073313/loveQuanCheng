.body {
    padding: 0 12rpx 0 12rpx;
    padding-right: 12rpx;
    width: 100%;
    height: 100%;
}

.top image {
    width: 128rpx;
    height: 128rpx;
    float: left;
    margin-right: 12rpx;
    border-radius: 10rpx;
}

.ord_top_name {
    line-height: 40rpx;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.ord_top_place {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 21rpx;
    color: #989898;
}

.order_info {
    height: 151rpx;
    width: 100%;
    background-color: #fff;
    margin-top: 12rpx;
    border-radius: 8rpx;
    padding: 14rpx 23rpx 0 23rpx;
    font-size: 26rpx;
}

.order_info.date,.order_info.num,.order_info.tel {
    padding-top: 0rpx;
}

.inf_date {
    height: 75rpx;
    line-height: 75rpx;
    padding-left: 58rpx;
    position: relative;
}

.inf_date:first-child,.inf_date:nth-child(2) {
    border-bottom: 1rpx solid #F3F3F3;
}

.inf_date .l1 {
    height: 75rpx;
    float: left;
    margin-right: 24rpx;
}

.inf_date .l2 {
    float: left;
}

.inf_date image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 23rpx;
    left: 15rpx;
}

.inf_num1,.inf_num2,.inf_tel0,.inf_tel1,.inf_tel2 {
    height: 75rpx;
    line-height: 75rpx;
    padding-left: 14rpx;
    position: relative;
}

.inf_num1,.inf_tel0,.inf_tel1 {
    border-bottom: 1rpx solid #F3F3F3;
}

.inf_num1 .f,.inf_num2 .f,.inf_tel0 .f,.inf_tel1 .f,.inf_tel2 .f {
    float: left;
    margin-right: 24rpx;
    font-size: 26rpx;
}

.inf_num2 .r,.inf_tel2 .r {
    color: #C31926;
}

.inf_num1 .r {
    color: #999;
}

.inf_tel1 {
    color: #333;
}

.inf_tel0 .r {
    color: #333;
}

.order_info .c {
    width: 160rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order_info .minus,.order_info .add {
    width: 34rpx;
    height: 34rpx;
    border-radius: 6rpx;
}

.order_info .add {
    line-height: 34rpx;
}

.btn {
    width: 640rpx;
    height: 93rpx;
    background-color: #C31926;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 93rpx;
    border-radius: 8rpx;
    position: fixed;
    bottom: 53rpx;
    left: 55rpx;
}

.modal {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
}

.modal.show {
    display: block;
}

.modal.hidden {
    display: none;
}

.modal_inf {
    background-color: #fff;
    border-radius: 16rpx;
    position: fixed;
    top: 28%;
    left: 13%;
    padding: 40rpx 60rpx 60rpx;
    text-align: center;
    width: 74%;
    height: max-content;
}

.modal_inf image {
    width: 310rpx;
    height: 310rpx;
    margin-top: 50rpx;
}

.modal_inf .nums {
    font-size: 26rpx;
    width: 100%;
    text-align: center;
    margin-top: 20rpx;
}

.modal_cross {
    font-size: 50rpx;
    font-weight: normal;
    position: absolute;
    top: 0rpx;
    right: 10rpx;
}

.star-img {
    width: 36rpx!important;
    height: 36rpx!important;
    margin-right: 16rpx!important;
    margin-top: 0rpx!important;
}

.star-score {
    width: 22rpx!important;
    height: 22rpx!important;
    margin-right: 10rpx!important;
}

.sure {
    margin-top: 36rpx;
    background-color: #c31926;
    color: #fff;
    border-radius: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    letter-spacing: 10rpx;
}

.show {
    display: block;
}

.hidden {
    display: none;
}