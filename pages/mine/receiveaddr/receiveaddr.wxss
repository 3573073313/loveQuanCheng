.wode-collect-wrapper {
    margin: 20rpx;
    padding: 0rpx 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.collect-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0rpx;
    border-bottom: 1px solid #f5f5f5;
}

.collect-item-tit {
    font-size: 32rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
}

.collect-time {
    font-size: 26rpx;
    margin-bottom: 6rpx;
}

.collect-item image {
    width: 40rpx;
    height: 40rpx;
}

.name {
    margin-right: 20rpx;
}

.tel {
    font-size: 26rpx;
    color: #666;
}

.remarks {
    font-size: 26rpx;
    color: #666;
}

.modal {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 9999999;
}

.modal.show {
    display: block;
}

.modal.hidden {
    display: none;
}

