.formWrap {
    margin: 25rpx 20rpx 120rpx;
    border-radius: 20rpx;
    background: #fff;
    padding: 30rpx 40rpx;
}

.formItem {
    padding: 15rpx 0;
    border-bottom: 1rpx solid #e3e3e3;
    height: 100rpx;
}

.formItemArea {
    padding: 15rpx 0;
}

.fileForm {
}

.title {
    color: #333;
    font-size: 30rpx;
    font-weight: bold;
    height: 30rpx;
    line-height: 30rpx;
    padding-left: 10rpx;
}

.fileForm .title {
    margin-top: 20rpx;
}

.content {
    width: 66%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: right;
}

.textareaCon {
    width: 100%;
    height: 300rpx;
    padding: 20rpx;
    background: #f2f2f2;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

.content input {
    width: 100%;
    height: 100%;
}

textarea,.textarea {
    width: 100%;
    height: 100%;
}

.radioWrap {
    width: 50%;
    height: 70rpx;
}

.radioIconFill {
    border-color: #ed3c44;
}

.radioIconFill .radioIconCon {
    background: #ed3c44;
}

.goodthings-tab0-btn {
    width: 100%;
    height: 100rpx;
    background: #c70304;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    line-height: 100rpx;
    font-weight: bold;
    position: fixed;
    bottom: 0;
    left: 0;
}

.iconPick {
    margin-left: 10rpx;
    transform: scale(1.2,0.6);
    display: inline-block;
}

.upLoadFile {
    background: #f3f3f3;
    width: 30%;
    height: 180rpx;
    color: #bbb;
    font-size: 120rpx;
    text-align: center;
    font-weight: 100;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.fileWrap {
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
}

.fileItem {
    width: 30%;
    min-height: 180rpx;
    position: relative;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.fileItemVideo {
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.fileItem .img {
    width: 100%;
    height: 100%;
}

.del {
    position: absolute;
    top: 0;
    right: 0;
    width: 35rpx;
    height: 35rpx;
    line-height: 28rpx;
    color: #333;
    padding: 5rpx;
    background: rgba(0,0,0,0.2);
}

.otherFile {
    height: 150rpx;
    max-width: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 5rpx 5rpx 5rpx 5rpx #f3f3f3;
    position: relative;
}

.fileType {
    width: 150rpx;
    height: 150rpx;
    background: #0a7;
    color: #fff;
    text-align: center;
    line-height: 150rpx;
    font-size: 46rpx;
    font-weight: 100;
}

.fileName {
    padding: 0 20rpx;
    color: #444;
    word-break: break-word;
}