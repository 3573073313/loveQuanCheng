.mess-item {
    padding: 40rpx 20rpx;
}

.mess-item-time {
    font-size: 25rpx;
    color: #c6c6c6;
    text-align: center;
    margin-bottom: 36rpx;
}

.mess-item-cont {
    padding: 34rpx 26rpx;
    background-color: #fff;
    text-align: justify;
    border-radius: 10rpx;
}

.mess-item-conttit {
    font-size: 32rpx;
    color: #555;
    margin-bottom: 20rpx;
}

.mess-item-contcont {
    font-size: 26rpx;
    color: #888888;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
}

.mess-item-continfo {
    font-size: 26rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.mess-item-continfo image {
    width: 18rpx;
    height: 24rpx;
    margin-right: 14rpx;
}

.mess-item-continfol {
    display: flex;
    align-items: center;
}