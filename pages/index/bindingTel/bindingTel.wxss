page {
    background: #fff;
}

.page {
    padding: 130rpx 50rpx 0;
}

.pageTitle {
    font-size: 50rpx;
    font-weight: bold;
    color: #222;
}

.optionWrap {
    margin: 80rpx 0 80rpx;
}

.option {
    display: flex;
    align-items: center;
    color: #222;
    font-size: 30rpx;
    padding: 20rpx 0;
    border-bottom: 1px solid #e3e3e3;
}

.title {
    font-weight: bold;
    padding-right: 20rpx;
    height: 45rpx;
    line-height: 45rpx;
    border-right: 1px solid #e3e3e3;
    width: 20%;
}

.input {
    width: 50%;
    padding: 0 20rpx;
    height: 45rpx;
    line-height: 45rpx;
}

input {
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    display: inline-block;
}

.getData {
    width: 30%;
    text-align: right;
    font-size: 28rpx;
    padding: 0;
}