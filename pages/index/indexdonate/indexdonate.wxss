@import "../../../html-view/index.wxss";

.news-wrapper {
    padding: 40rpx 20rpx;
    border-radius: 10rpx;
    background-color: #fff;
    background: url(https://jn.zhuwentec.com/jn-cultural-cdn/wxapp/index_donate_bg.png) no-repeat;
    background-size: 100% 280rpx;
}

.swiper-tab {
    font-size: 30rpx;
    color: #fff;
    display: flex;
    justify-content: space-between;
    padding-bottom: 32rpx;
    padding: 0rpx 100rpx;
}

.swiper-tab-item.active {
    font-size: 34rpx;
    color: #fff;
    border-bottom: 8rpx solid #c71021;
    padding-bottom: 10rpx;
    font-weight: bold;
}

.show {
    display: block;
}

.hidden {
    display: none;
}

.jjf-top-wrapper {
    padding: 20rpx;
    background-color: #fff;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
    display: flex;
    flex-wrap: wrap;
    margin-top: 30rpx;
}

.jjf-top-item {
    display: flex;
    width: 50%;
    border-right: 1px solid #f5f5f5;
}

.jjf-top-item image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.jjf-top-iteml {
    padding-top: 10rpx;
}

.jjf-top-iteml-tit {
    font-size: 26rpx;
}

.jjf-top-iteml-num {
    font-size: 34rpx;
    color: #c71021;
}

.jjf-jfc-wrapper {
    background: url(https://jn.zhuwentec.com/jn-cultural-cdn/wxapp/index_jfc_bg.png) no-repeat 100%;
    height: 270rpx;
    padding: 26rpx 34rpx;
    color: #c71021;
}

.jjf-jfc-tit {
    font-size: 32rpx;
    padding-bottom: 26rpx;
}

.jjf-jfc-nums {
    display: flex;
    justify-content: space-between;
}

.jjf-jfc-num {
    font-size: 80rpx;
    width: 70rpx;
    height: 100rpx;
    background-color: #fff;
    line-height: 100rpx;
    text-align: center;
    border-radius: 10rpx;
}

.jjf-jfc-tips {
    font-size: 26rpx;
    border-bottom: 1px solid #c71021;
    width: 160rpx;
    float: right;
    margin-top: 20rpx;
}

.jjf-jztit-wrapper {
    font-size: 32rpx;
    display: flex;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
}

.jjf-jztit-wrapper image {
    width: 32rpx;
    height: 34rpx;
    margin-right: 12rpx;
}

.jjf-jzdet-wrapper {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx 20rpx 100rpx;
}

.jztit-items {
    display: flex;
    padding-bottom: 14rpx;
    margin-top: 30rpx;
}

.jztit-item {
    border-right: 1px solid #f5f5f5;
    width: 33.3%;
    text-align: center;
}

.jztit-item image {
    width: 100rpx;
    height: 100rpx;
}

.jztit-item-tit {
    font-size: 26rpx;
}

.jztit-item-num {
    font-size: 36rpx;
    color: #c71021;
}

.jztit-nowjf-tit {
    font-size: 32rpx;
    padding: 20rpx 0rpx;
}

.jztit-nowjf-items {
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-around;
}

.jztit-nowjf-item {
    font-size: 32rpx;
    color: #999;
    padding: 0 10rpx;
    height: 60rpx;
    border: 1px solid #f5f5f5;
    text-align: center;
    line-height: 56rpx;
    border-radius: 10rpx;
}

.jztit-nowjf-other {
    font-size: 26rpx;
    color: #999;
    display: flex;
    align-items: center;
}

.jztit-nowjf-other input {
    border: 1px solid #f5f5f5;
    border-radius: 10rpx;
    width: 190rpx;
    height: 60rpx;
    margin: 0rpx 20rpx;
    text-align: center;
    color: #333;
}

.jzf-btn {
    height: 90rpx;
    background-image: linear-gradient(#c71b28,#fd2631);
    color: #fff;
    font-size: 34rpx;
    text-align: center;
    line-height: 90rpx;
    border-radius: 10rpx;
    margin: 60rpx auto 0rpx;
    letter-spacing: 1rem;
}

.tabs1-jzinfo-wrapper {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx 24rpx 30rpx;
    margin-top: 30rpx;
}

.jf-rank-wrapper {
    padding: 30rpx 20rpx 40rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin-top: 26rpx;
}

.jf-rank-tit {
    font-size: 32rpx;
    color: #c71021;
    margin-bottom: 20rpx;
    letter-spacing: 0.5px;
}

.jf-rank-tit-items {
    font-size: 26rpx;
    color: #999;
    display: flex;
    padding-bottom: 12rpx;
    border-bottom: 1px solid #f5f5f5;
    text-align: center;
}

.jf-rank-item {
    display: flex;
    height: 130rpx;
    align-items: center;
    border-bottom: 1px solid #f5f5f5;
}

.jf-rank-item-medal {
    width: 41rpx;
    height: 60rpx;
    margin-right: 20rpx;
}

.jf-rank-item-nameinfo {
    display: flex;
    width: 45%;
}

.imgHead {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 14rpx;
    overflow: hidden;
    border: 1rpx solid #eee;
}

.imgHead image {
    width: 100%;
    height: 100%;
}

.swiper_item {
    display: flex;
}

.nameOverflow {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    max-width: 160rpx;
}

.jf-rank-item-nameinfo-name {
    font-size: 32rpx;
    margin-bottom: 6rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.jf-rank-item-nameinfo-tip {
    font-size: 22rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.jf-rank-item-timeinfo {
    color: #ff7f00;
    font-size: 26rpx;
    width: 26%;
    text-align: center;
}

.jf-rank-item-numinfo {
    color: #c71021;
    font-size: 26rpx;
    width: 20%;
    text-align: center;
}

.jf-public-wrapper {
    background-color: #fff;
    border-radius: 10rpx;
    padding: 20rpx 24rpx 40rpx;
    margin-top: 26rpx;
}

.jf-public-tit {
    font-size: 35rpx;
    margin-bottom: 20rpx;
    letter-spacing: 0.5px;
    font-weight: bold;
    text-align: center;
}

.jf-public-tit-items {
    font-size: 26rpx;
    color: #999;
    display: flex;
    padding-bottom: 12rpx;
    border-bottom: 1px solid #f5f5f5;
}

.jf-public-item {
    padding: 0rpx 0rpx 40rpx;
    border-bottom: 1px solid #f5f5f5;
}

.jf-public-item-top {
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.jf-public-item-name {
    font-size: 32rpx;
    font-weight: bold;
}

.jf-public-item-time {
    font-size: 22rpx;
    color: #999;
}

.jf-public-item-bottom {
    display: flex;
    justify-content: space-between;
}

.jf-public-item-cont {
    font-size: 26rpx;
    color: #666;
    line-height: 40rpx;
    width: 73%;
    text-align: justify;
}

.jf-public-item-score {
    font-size: 36rpx;
    color: #c71021;
    margin-top: 40rpx;
}

.jf-public-item-cont .html-view {
    font-size: 27rpx;
}

.index-headlines {
    padding: 10rpx 20rpx 10rpx 0rpx;
    margin: 10rpx 0rpx;
    display: flex;
}

.index-headlines image {
    margin-right: 12rpx;
}

.index-headlines-tex {
    color: rgba(0,0,0,0.6);
    font-size: 28rpx;
}

.msg_img {
    width: 32rpx;
    float: left;
    font-size: 20rpx;
    margin-top: 14rpx;
}

.msg_img image {
    width: 100%;
    height: 34rpx;
}

.msg_box {
    float: left;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: left;
    vertical-align: middle;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 20rpx;
    color: #1a1a1a;
    width: 94%;
}

.isShowDot {
    background: #c71021;
    color: #fff;
}