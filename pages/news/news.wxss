.news-wrapper {
    margin: 20rpx;
    padding: 122rpx 0 20rpx;
    border-radius: 0rpx 0rpx 10rpx 10rpx;
    background-color: #fff;
}

.tabWrap {
    background-color: #fff;
    position: fixed;
    top: 20rpx;
    left: 20rpx;
    width: 94.6%;
    z-index: 999;
    padding: 40rpx;
}

.swiper-tab {
    font-size: 1rem;
    color: rgb(153,153,153);
    display: flex;
    justify-content: space-between;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
    white-space: nowrap;
}

.swiper-tab-news {
    padding: 0 40rpx 20rpx;
    height: 55rpx;
    white-space: nowrap;
    width: 89%;
}

.swiper-tab-item.active {
    font-size: 1.1rem;
    color: rgb(51,51,51);
    border-bottom: 2rpx solid rgb(237,60,68);
    padding-bottom: 10rpx;
    font-weight: bold;
}

.swiper-tab-item {
    margin-right: 30rpx;
    display: inline-block;
    font-size: 1rem;
}

.swiper-tab-item-news.active {
    font-size: 0.9rem;
}

.show {
    display: block;
}

.hidden {
    display: none;
}

.info1 {
    height: 180rpx;
    background-color: #fff;
    padding: 22rpx 20rpx 22rpx 20rpx;
    border-radius: 12rpx;
    margin-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.title {
    color: rgb(51,51,51);
    font-size: 1rem;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-align: justify;
}

.from {
    font-size: 0.7rem;
    color: rgb(153,153,153);
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.from-top {
    display: flex;
    align-items: center;
}

.uptop {
    color: rgb(237,60,68);
    margin-right: 40rpx;
    font-size: 0.8rem;
}

.inf2-from {
    font-size: 0.7rem;
    color: rgb(153,153,153);
    overflow: hidden;
}

.origin {
}

.time {
    line-height: 34rpx;
}

.info2 {
    height: 206rpx;
    padding: 22rpx 20rpx 15rpx 20rpx;
    background-color: #fff;
    border-radius: 12rpx;
    margin-bottom: 10rpx;
}

.info2 .left {
    width: 66%;
    margin-right: 10rpx;
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.info2-img {
    overflow: hidden;
    border-radius: 8rpx;
}

.info2-img image {
    float: left;
    width: 224rpx;
    height: 148rpx;
    border-radius: 4px;
}

.info3 {
    padding: 22rpx 20rpx 22rpx 20rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
    border-radius: 12rpx;
}

.wrapper {
    margin-top: 22rpx;
    position: relative;
}

.wrapper>image {
    width: 100%;
    height: 350rpx;
    border-radius: 12rpx;
}

.playIcon {
    width: 100%;
    height: 350rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 35rpx;
}

.playStyle {
    background: rgba(255,255,255,0.8);
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-radius: 50%;
    color: #444;
    padding-left: 10rpx;
}

.info3 image {
    height: 140rpx;
    width: 198rpx;
    background-color: pink;
    border-radius: 4px;
}

.info3 image:nth-child(1),.info3 image:nth-child(2) {
    margin-right: 12rpx;
}

.info4 {
    padding: 22rpx 20rpx 15rpx 20rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
    border-radius: 12rpx;
}

.info4 video {
    height: 310rpx;
    width: 100%;
    border-radius: 10rpx;
}

.top-line {
    height: 20rpx;
    width: 100%;
    background-color: #f5f5f5;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 999;
}

.toolsc {
    display: flex;
    align-items: center;
    color: rgb(128,128,128);
    font-size: 0.8rem;
    margin-left: 50rpx;
}

.toolsc image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.toolsr {
    width: 32%;
    justify-content: flex-end;
    display: flex;
    align-items: center;
}

.toolsr image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.headinfo_r {
    font-size: 0.7rem;
    display: flex;
}

.headinfo_rtype {
    color: #fff;
    background-color: #ff7f00;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0rpx 6rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
}

.headinfo_rr {
    color: #999;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    height: 32rpx;
    line-height: 32rpx;
}

.goodthing-tool-addr {
    width: 92%;
}

.disabled {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.indexsnap .gzimgs-area {
    width: 199rpx;
    height: 199rpx;
}