.quanyi-top-info {
    padding: 20rpx;
    background-image: linear-gradient(#fff,#f5f5f5);
    height: 110rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.quanyi-top-inf {
    display: flex;
    align-items: center;
}

.quanyi-top-tx {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.quanyi-top-tex {
    color: rgb(26,26,26);
    font-size: 28rpx;
}

.quanyi-top-icon {
    position: relative;
    width: 50rpx;
    height: 50rpx;
}

.dot {
    position: absolute;
    top: -5rpx;
    right: -2rpx;
    background: #c51a2a;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
}

.quanyi-top-icon image {
    width: 46rpx;
    height: 44rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.swiper-wrapper {
    padding: 0rpx 20rpx;
    background-color: #f5f5f5;
    padding-bottom: 20rpx;
}

.swiper {
    border-radius: 14rpx;
    overflow: hidden;
}

.slide-image {
    width: 100%;
    height: 300rpx;
}

.swiper-tab {
    font-size: 26rpx;
    color: rgb(153,153,153);
    display: flex;
    justify-content: space-between;
    padding-bottom: 32rpx;
    background-color: #fefefe;
    padding: 40rpx 30rpx 20rpx;
    white-space: nowrap;
    height: 80rpx;
}

.swiper-tab-item.active {
    font-size: 34rpx;
    color: rgb(51,51,51);
    border-bottom: 2rpx solid rgb(237,60,68);
    padding-bottom: 10rpx;
    font-weight: bold;
}

.swiper-tab-item {
    display: inline-block;
    margin: 0rpx 18rpx;
}

.show {
    display: block;
}

.hidden {
    display: none;
}

.index-tasks {
    margin: 0rpx 20rpx 20rpx;
    background-color: #fff;
    padding: 50rpx 0rpx 20rpx;
    border-radius: 10rpx;
    box-shadow: 0px 0px 10px 5px #ececec;
    border: 2rpx solid #eee;
}

.index-tasks-tit {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.index-tasks-titl {
    font-size: 40rpx;
    color: rgba(0,0,0,0.9);
    font-weight: bold;
}

.index-tasks-titmore {
    font-size: 24rpx;
    color: rgb(197,27,40);
}

.index-tasks-topbg {
    margin: 15px 10px 15px;
    width: 93.6%;
    height: 140rpx;
    border-radius: 8rpx;
}

.index-tasks-item {
    width: 300rpx;
    height: 405rpx;
    background-color: #fff;
    border-radius: 15rpx;
    border: 1rpx solid #f3f3f3;
    overflow: hidden;
    box-shadow: 10rpx 10rpx 20rpx #e3e3e3;
    margin-bottom: 20rpx;
}

.index-tasks-itemimg {
    width: 100%;
    height: 250rpx;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
    border-bottom: 1rpx solid #e3e3e3;
}

.index-tasks-itemtit {
    font-size: 28rpx;
    color: rgb(51,51,51);
    padding: 0 14rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.nameMiddle {
    display: flex;
    align-items: center;
    height: 80rpx;
}

.index-tasks-score {
    font-size: 26rpx;
    color: rgb(195,27,42);
}

.index-tasks-count {
    font-size: 24rpx;
    color: rgb(153,153,153);
}

.index-tasks-items {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 30rpx;
}

.index-tasks-scroll {
    height: 390rpx;
    display: flex;
    white-space: nowrap;
}

.index-tasks-scroll .index-tasks-item {
    display: inline-block;
    margin-left: 30rpx;
    width: 250rpx;
    height: 355rpx;
    position: relative;
}

.index-tasks-scroll .index-tasks-item:last-child {
    margin-right: 30rpx;
}

.index-tasks-scroll .index-tasks-score {
    position: absolute;
    height: 50rpx;
    background: rgba(255,255,255,0.7);
    width: 100%;
    top: 200rpx;
    text-align: center;
    color: #000;
}

.index-tasks-scroll .index-tasks-itemtit {
    white-space: normal!important;
}

.dotFlex {
    display: flex;
    justify-content: space-between;
    padding: 0 20rpx;
    align-items: center;
}

.scroll-header {
    display: flex;
    white-space: nowrap;
    background-color: #fff;
    padding-top: 2%;
    border-radius: 12rpx 12rpx 12rpx 12rpx;
    align-items: flex-start;
    height: 380rpx;
}

.scroll-header .item {
    width: 38%;
    display: inline-block;
    margin: 0 20rpx 0rpx 0rpx;
    border: 2rpx solid #f0f0f0;
    border-radius: 10rpx;
}

.scroll-header .item image {
    height: 260rpx;
    width: 100%;
    border-radius: 10rpx 10rpx 0rpx 0rpx;
    display: inline-block;
}

.index_quanyi_tip {
    position: absolute;
    left: 0rpx;
    display: flex;
    align-items: center;
    bottom: 0rpx;
    background-color: rgba(255,255,255,0.5);
    width: 100%;
    justify-content: center;
    height: 60rpx;
}

.index_quanyi_tip0 {
    font-size: 30rpx;
    color: rgb(197,27,40);
    font-weight: bold;
    margin-right: 10rpx;
}

.index_quanyi_tip1 {
    font-size: 28rpx;
    color: rgb(51,51,51);
}

.index_quanyi_tex {
    line-height: 36rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal!important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-align: justify;
    padding: 0rpx 10rpx 10rpx;
    font-size: 24rpx;
    color: rgb(128,128,128);
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.openQrCode {
    width: 100rpx;
    height: 100rpx;
    z-index: 100;
}

.openQrCode image {
    height: 100%;
    width: 100%;
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    border-bottom: 1rpx solid #e3e3e3;
    padding: 20rpx 0 0;
}