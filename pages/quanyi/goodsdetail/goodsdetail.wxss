@import "../../../html-view/index.wxss";

page {
    background-color: #f3f3f3;
}

.swiper-item {
    display: block;
    margin-top: 30rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

swiper {
    width: 100%;
    height: 600rpx;
}

swiper-item {
    position: relative;
}

.qy-wrapper {
    position: relative;
    top: -50rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    margin-bottom: 80rpx;
}

.qy-goods-detwrapper {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
}

.qy-goods-detname {
    font-size: 32rpx;
    letter-spacing: 1rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 50rpx;
    font-weight: bold;
}

.qy-goods-detscore {
    color: #c71021;
    font-size: 30rpx;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    border-bottom: 1px solid #f0f0f0;
    text-align: right;
    font-weight: bold;
}

.qy-goods-detsize {
    font-size: 26rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.qy-goods-detsize span {
    margin-right: 20rpx;
}

.qy-goods-detemail {
    font-size: 26rpx;
}

.qy-goods-dettips {
    font-size: 26rpx;
    color: #b3b3b3;
    padding-top: 22rpx;
}

.swiper-tab {
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    color: #ccc;
    font-size: 28rpx;
    background-color: #fff;
    border-radius: 8rpx 8rpx 0 0;
    border-bottom: 2rpx solid #f3f3f3;
    margin-top: 20rpx;
}

.swiper-tab-item {
    color: #999;
    font-size: 30rpx;
    width: 49%;
    border-left: 1rpx solid #f3f3f3;
}

.swiper-tab-item:first-child {
    border-left: none;
}

.spec {
    color: #ccc;
}

.speccur {
    color: red;
    border: 1rpx solid #c71021;
    border-radius: 6rpx;
    padding: 0 10rpx;
}

.active {
    color: #c31926;
    font-size: 30rpx;
    font-weight: bold;
    width: 49%;
}

.show {
    display: block;
}

.hidden {
    display: none;
}

.detail_wrapper {
    background-color: #fff;
    padding-bottom: 80rpx;
}

.tab_detail {
    padding: 30rpx 23rpx 20rpx 23rpx;
}

.tab_det1 {
    background-color: #fff;
    font-size: 26rpx;
    line-height: 38rpx;
    color: #666;
}

.tab_det2_title {
    height: 48rpx;
    font-size: 26rpx;
    color: #333;
    font-weight: bold;
}

.tab_det2_tex {
    font-size: 24rpx;
    line-height: 38rpx;
    color: #666;
    text-indent: 60rpx;
}

.tab_det1 image {
}

.qy-goods-del-icon {
    font-size: 18rpx;
    color: #999;
    text-align: center;
    background-color: #fff;
    width: 32%;
    display: flex;
    flex-direction: column;
    padding-top: 22rpx;
    align-items: center;
    position: relative;
}

.dot {
    position: absolute;
    top: 15rpx;
    right: 40%;
    background: #c51a2a;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
}

.qy-goods-del-icon image {
    width: 38rpx;
    height: 36rpx;
    margin-bottom: 8rpx;
}

.goodsBtn {
    width: 68%;
    display: flex;
}

.soldOut {
    width: 68%;
    text-align: center;
    line-height: 100rpx;
}

.qy-goods-del-btn {
    color: #fff;
    font-size: 32rpx;
    width: 50%;
    line-height: 100rpx;
    text-align: center;
}

.qy-goods-del-btns {
    display: flex;
    height: 100rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
}

.modal {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 9999999;
}

.modal.show {
    display: block;
}

.modal.hidden {
    display: none;
}

.qy-goodsdel-changemodal {
    height: 660rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 999;
    width: 100%;
}

.qy-goodsdel-changemodal-top image {
    width: 164rpx;
    height: 164rpx;
    margin-right: 24rpx;
}

.qy-goodsdel-changemodal-topc {
    width: 73%;
    padding-top: 6rpx;
}

.qy-goodsdel-changemodal-topc-name {
    font-size: 32rpx;
    letter-spacing: 1rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 46rpx;
    padding-bottom: 6rpx;
}

.goodsBtnWrap {
    display: flex;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}

.qy-goodsdel-changemodal-topc-price {
    font-size: 36rpx;
    color: #c71021;
}

.qy-goodsdel-changemodal-topc-cancle {
    position: relative;
    top: -22rpx;
    left: 8rpx;
    font-size: 36rpx;
}

.qy-goodsdel-changemodal-top {
    display: flex;
    border-bottom: 1px solid #f0f0f0;
    padding: 20rpx;
}

.minus,.add {
    width: 34rpx;
    height: 34rpx;
    border-radius: 6rpx;
}

.qy-goodsdel-changemodal-botsize {
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}

.qy-goodsdel-changemodal-botsizeimg {
    display: flex;
    margin-left: 33rpx;
    align-items: center;
    padding-top: 2rpx;
}

.one {
    margin: 0rpx 20rpx;
}

.qy-goodsdel-changemodal-btn {
    background-color: #c31021;
    color: #fff;
    font-size: 32rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    margin-top: 200rpx;
    width: 50%;
}

.modal2 {
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 9999999;
}

.jftab01-modal-info-wrapper {
    width: 604rpx;
    background-color: #fff;
    margin: 520rpx auto;
    border-radius: 10rpx;
    padding: 54rpx 50rpx;
}

.jftab01-modal-info-cont {
    font-size: 32rpx;
    line-height: 40rpx;
    letter-spacing: 0.7px;
    text-align: justify;
}

.jftab01-modal-info-btn {
    display: flex;
    justify-content: space-between;
}

.jftab01-modal-info-btn0 {
    width: 45%;
    height: 80rpx;
    background-color: #f5f5f5;
    color: #000;
    text-align: center;
    line-height: 80rpx;
    border-radius: 10rpx;
    font-size: 32rpx;
    margin-top: 40rpx;
}

.jftab01-modal-info-btn1 {
    width: 45%;
    height: 80rpx;
    background-color: #c71021;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    border-radius: 10rpx;
    font-size: 32rpx;
